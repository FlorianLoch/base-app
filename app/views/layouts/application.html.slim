doctype html
html ng-app='baseApp'
  head
    title BaseApp
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  body

    nav.navbar.navbar-default.navbar-fixed-top role='navigation' ng-controller='LoginCtrl'
      .container
        .navbar-header
          button type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1' class='navbar-toggle'
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a href='#/' class='navbar-brand' BaseApp
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a href='#/' Home
            li
              a href='#/secret' ng-show='sService.loggedIn' Secret
          ul.nav.navbar-nav.navbar-right ng-init='getUserInfo()'
            li ng-show='sService.loggedIn'
              a= "{{ sService.email }}"
            li ng-show='sService.loggedIn'
              a href='#/users/sign_in' ng-click='logMeOut()' Logout
            li ng-hide='sService.loggedIn'
              a href='#/users/sign_in' Login

    .body ng-view=''
