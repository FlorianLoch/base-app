.container
  .unauth-user-panel.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    .panel.panel-info
      .panel-heading
        .panel-title.pull-left Sign Up
        .forgot-password.pull-right.text-85= link_to 'Login', '#/users/sign_in'
        .clearfix

      .panel-body
        form id='sign_up_form' name='signUpForm' ng-submit='signup()'
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input type='email' class='form-control' placeholder='E-Mail' autofocus='autofocus' ng-model='login.user_email' ng-init="login.user_email = ''" name='email'
          
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-lock
            input type='password' class='form-control' placeholder='Password' ng-model='login.user_password' ng-init="login.user_password = ''" name='password'

          .form-group
            .controls
              button.btn.btn-info type='submit' style='margin-top: 15px;'
                i.fa.fa-chevron-right
                |  Sign up

          hr

          .text-85
            = link_to "Didn't receive confirmation instructions?", '#/users/confirmation'
            br

            = link_to "Didn't receive unlock instructions?", '#/users/unlock'
            br
